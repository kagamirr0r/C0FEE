# -*- mode: ruby -*-
# vi: set ft=ruby :
create_table "users", force: :cascade do |t|
  t.string "email", default: "", null: false
  t.string "encrypted_password", default: "", null: false
  t.string "reset_password_token"
  t.datetime "reset_password_sent_at"
  t.datetime "remember_created_at"
  t.integer "sign_in_count", default: 0, null: false
  t.datetime "current_sign_in_at"
  t.datetime "last_sign_in_at"
  t.inet "current_sign_in_ip"
  t.inet "last_sign_in_ip"
  t.string "confirmation_token"
  t.datetime "confirmed_at"
  t.datetime "confirmation_sent_at"
  t.string "unconfirmed_email"
  t.integer "failed_attempts", default: 0, null: false
  t.string "unlock_token"
  t.datetime "locked_at"
  t.datetime "created_at", null: false
  t.datetime "updated_at", null: false
  t.string "provider"
  t.string "uid"
  t.string "username"
  t.string "avatar"
  t.index ["confirmation_token"], name: "index_users_on_confirmation_token", unique: true
  t.index ["email"], name: "index_users_on_email", unique: true
  t.index ["reset_password_token"], name: "index_users_on_reset_password_token", unique: true
  t.index ["unlock_token"], name: "index_users_on_unlock_token", unique: true
end

create_table "beans", force: :cascade do |t|
  t.integer "user_id"
  t.integer "shop_id"
	t.string "country", null: false
  t.string "area"
  t.string "variety"
  t.string "farm"
  t.string "process"
  t.string "roast"
	t.integer "price"
  t.string "bean_image"
	t.string "bean_url"
end

create_table "shops", force: :cascade do |t|
  t.string "name", null: false
  t.string "address"
  t.string "url"
  t.string "shop_image"
end

create_table "impressions", force: :cascade do |t|
  t.integer "bean_id"
  t.integer "i_sour"
  t.integer "i_sweet"
  t.integer "i_bitter"
  t.text "i_comment"
  t.string "i_image"
end

create_table "recipes", force: :cascade do |t|
  t.integer "bean_id"
	t.string "name", null: false
  t.string "grind"
  t.string "temperature"
  t.integer "amount"
  t.string "extraction"
  t.string "r_image"
end

create_table "tastes", force: :cascade do |t|
  t.integer "recipe_id"
  t.integer "t_sour"
  t.integer "t_sweet"
  t.integer "t_bitter"
  t.integer "t_aroma"
  t.integer "t_fullbody"
  t.text "t_comment"
end

create_table "bean_likes", force: :cascade do |t|
  t.integer "user_id"
  t.integer "bean_id"
end

create_table "recipe_likes", force: :cascade do |t|
  t.integer "user_id"
  t.integer "recipe_id"
end

add_index "beans", ["user_id"], name:"user_ind_on_beans", using: :btree
add_foreign_key "beans", "users", name: "fk_beans_belong_to_user"

add_index "beans", ["shop_id"], name: "shop_ind_on_beans", using: :btree
add_foreign_key "beans", "shops", name: "fk_beans_belong_to_shop"

add_index "impressions", ["bean_id"], name: "bean_ind_on_impressions", using: :btree
add_foreign_key "impressions","beans", name: "fk_impression_belongs_to_bean"

add_index "recipes",["bean_id"], name: "bean_ind_on_recipess", using: :btree
add_foreign_key "recipes","beans", name: "fk_recipes_belong_to_bean"

add_index "tastes",["recipe_id"], name: "recipe_ind_on_tastes", using: :btree
add_foreign_key "tastes","recipes",name: "fk_taste_belongs_to_recipe"

add_index "bean_likes",["user_id"], name: "user_ind_on_bean_likes", using: :btree
add_foreign_key "bean_likes","users", name: "fk_bean_likes_belong_to_user"

add_index "bean_likes",["bean_id"], name: "bean_ind_on_bean_likes", using: :btree
add_foreign_key "bean_likes","beans",name: "fk_bean_likes_belong_to_bean"

add_index "recipe_likes",["user_id"], name: "user_ind_on_recipe_likes", using: :btree
add_foreign_key "recipe_likes","users", name: "fk_recipe_likes_belong_to_user"

add_index "recipe_likes",["recipe_id"], name: "recipe_ind_on_recipe_likes", using: :btree
add_foreign_key "recipe_likes","recipes",name: "fk_recipe_likes_belong_to_recipe"
