<h3><%=t('.title')%></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

	<div>
		<% if current_user.avatar?%>
			<%= image_tag current_user.avatar.url %>
		<% else %>
			<%= image_tag 'no_avatar.png', :size => '100x100'%>
		<% end %>
	</div>

  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
		<input id="avatar_filename" readonly type="text" value="" >
		<button type="button" id="avatar_select_file_button">Select</button>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>t('.currently_waiting_confirmation_for_email'): <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t('.new_password')%> <i>(<%= @minimum_password_length %>字以上)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
      <br />
  </div>

  <div class="field">
    <%= f.label t('.confirm_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%=t('.we_need_your_current_password_to_confirm_your_changes')%></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.title') %>
  </div>
<% end %>

<h3><%=t('.delete_account')%></h3>
<p><%= button_to t('.delete_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to t('.back'), :back %>
