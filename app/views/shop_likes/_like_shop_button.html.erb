<% shop_liked_counts(shop)%>
	<% if current_user.liked_shop?(shop) %>
		<%= button_to shop_like_path(id: shop.id),method: :delete,remote: true,class: "waves-effect waves-light btn-small" do%>
			<%= t('.cancel_like_shop') %>
			<%= content_tag :i, "favorite", class: "material-icons right" %>
			<%= @count_shop_likes %>
		<% end %>
	<% else %>
		<%= button_to shop_likes_path(id: shop.id),remote: true,class: "waves-effect waves-light btn-small red accent-3" do%>
			<%= t('.like_shop')%>
			<%= content_tag :i, "favorite_border", class: "material-icons red accent-3 right" %>
			<%= @count_shop_likes %>
		<% end %>
	<% end%>
