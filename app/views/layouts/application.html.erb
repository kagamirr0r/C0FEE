<!DOCTYPE html>
<html>
  <head>
    <title>C0FEE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>
		<div class="navbar-fixed">
    <header>
        <nav>
				<div class='nav-wrapper red accent-3'>
					<ul id="nav-mobile" class="left hide-on-med-and-down">
						<li><%= link_to "C0FEE",root_url ,id:"logo"%></li>
							<% if user_signed_in? %>
									<% if current_user.avatar?%>
										<li><%= link_to image_tag(current_user.avatar_url(:thumb).to_s,:size => '38x38'), my_pages_show_path(current_user) %></li>
									<% else %>
										<li><%= link_to image_tag('no_avatar.png', size:'38x38', id:'no_avatar_image'), my_pages_show_path(current_user) %></li>
									<% end %>
								<li><%= link_to t('.register_bean'), shops_path %></li>
								<li><%= link_to t('.register_shop'), new_shop_path %></li>
								<li><%= link_to t('.create_recipe'), beans_path %></li>
					</ul>
					<ul id="nav-mobile" class="right hide-on-med-and-down">
							<li><%= link_to_unless_current t('.edit_profile'), edit_user_registration_path %></li>
							<li><%= link_to_unless_current t('.log_out'), destroy_user_session_path, method: :delete %></li>
						<% else %>
							<li><%= link_to_unless_current t('.create_account'), new_user_registration_path %></li>
							<li><%= link_to_unless_current t('.log_in'), new_user_session_path %></li>
						<% end %>
					</ul>
					</div>
        </nav>
    </header>
		</div>

        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
    	<%= yield %>
  </body>
</html>
