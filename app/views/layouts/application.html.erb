<!DOCTYPE html>
<html>

<head>
  <title>C0FEE</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
	<header>

	<ul id="slide-out" class="sidenav">
		<% if user_signed_in? %>
    <li>
			<div class="user-view">
				<div class="background">
					<%= image_tag "toppage_image", id:"backgroud_image" %>
				</div>
			<% if current_user.avatar?%>
				<%= link_to image_tag(current_user.avatar_url(:thumb).to_s, size: '38x38', id:'avatar_image',class:'circle'), "#", class: 'dropdown-trigger',id: 'nav_avatar', data:{target:'dropdown_nav'}%>
			<% else %>
				<%= link_to image_tag('no_avatar.png', size:'38x38', id:'no_avatar_image',class:'circle'), "#", class: 'dropdown-trigger',id: 'nav_avatar', data:{target:'dropdown_nav'} %>
			<% end %>
      <span class="white-text"><%= current_user.username %></span>
      <span class="white-text"><%= current_user.email %></span>
			<span class="right">
				<%= link_to edit_user_registration_path do %>
				<i class="white-text material-icons">edit</i>
				<% end %>
			</span>
   	 </div>
		</li>
		<% end %>
		<div>
			<% unless user_signed_in? %>
				<li><%= link_to t('.create_account'), new_user_registration_path %></li>
				<li><%= link_to t('.log_in'), new_user_session_path %></li>
			<% else %>
				<li><%= link_to t('.my_page'),my_page_path(current_user)%></li>
				<li><%= link_to t('.edit_profile'), edit_user_registration_path %></li>
				<li><%= link_to t('.inquiry'),new_inquiry_path %></li>
				<li><%= link_to t('.log_out'), destroy_user_session_path, method: :delete %></li>
			<% end %>
				<li><div class="divider"></div></li>
			<% if I18n.locale.to_s == "en" %>
				<li><%= link_to('JPN Ver.', :locale => 'ja')%></li>
			<% else %>
				<li><%= link_to('EN Ver.', :locale => 'en')%></li>
			<% end %>
				<%# <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
				<li><a href="#!">Second Link</a></li>
				<li><div class="divider"></div></li>
				<li><a class="subheader">Subheader</a></li>
				<li><a class="waves-effect" href="#!">Third Link With Waves</a></li> %>
			</div>
  	</ul>

		<nav>
			<div class='nav-wrapper red accent-3'>
				  <span><a href="#" data-target="slide-out" class="sidenav-trigger hide-on-large-only left"><i class="material-icons">menu</i></a></span>
				<% if user_signed_in? %>
				<a class='dropdown-trigger left hide-on-med-and-down' href='#' data-target='dropdown1'><i class="material-icons">menu</i></a>
					<ul class="dropdown-content" id='dropdown1'>
						<li class="teal"><%= link_to shops_path, class:"white-text" do%><i class="material-icons">store</i><%= t('.shop') %><% end %></li>
						<li class="teal"><%= link_to beans_path, class:"white-text" do%><i><%= image_tag 'white-bean.png', class: "material-icons" %></i><%= t('.bean') %><% end %></li>
						<li class="teal"><%= link_to recipes_path, class:"white-text" do%><i class="material-icons">import_contacts</i><%= t('.recipe') %><% end %></li>
					</ul>
				<% end %>

					<ul class="brand-logo center">
						<li><%= link_to "C0FEE",root_url ,id:"logo"%></li>
					</ul>

				<ul class="right hide-on-med-and-down">
					<% unless user_signed_in? %>
						<li><%= link_to_unless_current t('.create_account'), new_user_registration_path %></li>
						<li><%= link_to_unless_current t('.log_in'), new_user_session_path %></li>
					<% else %>
						<% if current_user.avatar?%>
							<li><%= link_to image_tag(current_user.avatar_url(:thumb).to_s, size: '38x38', id:'avatar_image',class:'circle'), "#", class: 'dropdown-trigger',id: 'nav_avatar', data:{target:'dropdown_nav'}%></li>
						<% else %>
							<li><%= link_to image_tag('no_avatar.png', size:'38x38', id:'no_avatar_image',class:'circle'), "#", class: 'dropdown-trigger',id: 'nav_avatar', data:{target:'dropdown_nav'} %></li>
						<% end %>

						<ul id='dropdown_nav' class='dropdown-content'>
							<li><%= link_to t('.my_page'),my_page_path(current_user)%></li>
							<li><%= link_to t('.edit_profile'), edit_user_registration_path %></li>
							<li><%= link_to t('.inquiry'),new_inquiry_path %></li>
							<li><%= link_to t('.log_out'), destroy_user_session_path, method: :delete %></li>
						</ul>
					<% end %>

					<% if I18n.locale.to_s == "en" %>
						<li><%= link_to "EN", "#", class: 'dropdown-trigger', data:{target:'dropdown_lang'} %></li>
            <ul id='dropdown_lang' class='dropdown-content'>
            <li><%= link_to('JPN Ver.', :locale => 'ja')%></li>
						</ul>
					<% else %>
						<li><%= link_to "JPN", "#", class: 'dropdown-trigger', data:{target:'dropdown_lang'} %></li>
            <ul id='dropdown_lang' class='dropdown-content'>
            <li><%= link_to('EN Ver.', :locale => 'en')%></li>
						</ul>
					<% end %>
				</ul>
			</div>
		</nav>
	</header>

  <%= yield %>

	<% unless flash.empty? %>
		<script type="text/javascript">
			<% flash.each do |key, value| %>
			<% next if key == 'timedout' %>
				M.toast({html: '<%= value %>', classes: 'teal lighten-2'})
			<% end %>
		</script>
	<% end %>
</body>
</html>


