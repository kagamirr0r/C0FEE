<!DOCTYPE html>
<html>
  <head>
    <title>C0FEE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>
    <header>
        <nav>
				<div class='nav-wrapper'>
				 <span><%= link_to "C0FEE",root_url ,class:"logo"%></span>
          <% if user_signed_in? %>
							<% if current_user.avatar?%>
								<%= link_to image_tag(current_user.avatar_url(:thumb).to_s,:size => '38x38',:id => 'avatar'), my_pages_show_path(current_user) %>
							<% else %>
								<%= link_to image_tag('no_avatar.png', :size => '38x38', :id => 'no_avatar_image'), my_pages_show_path(current_user) %>
							<% end %>
            <%= link_to t('.register_bean'), shops_path %>
						<%= link_to t('.register_shop'), new_shop_path %>
						<%= link_to t('.create_recipe'), beans_path %>
						<%= link_to_unless_current t('.edit_profile'), edit_user_registration_path %>
            <%= link_to_unless_current t('.log_out'), destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to_unless_current t('.create_account'), new_user_registration_path %>
            <%= link_to_unless_current t('.log_in'), new_user_session_path %>
          <% end %>
					</div>
        </nav>
    </header>

        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
