<!DOCTYPE html>
<html>

<head>
  <title>C0FEE</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
	<header>
		<nav>
			<div class='nav-wrapper red accent-3'>
				<ul id="nav-mobile" class="left hide-on-med-and-down">
					<li><%= link_to "C0FEE",root_url ,id:"logo"%></li>
					<% if user_signed_in? %>
						<li><%= link_to t('.bean'), beans_path%></li>
						<li><%= link_to t('.shop'), shops_path%></li>
						<li><%= link_to t('.recipe'), recipes_path%></li>
					<% end %>
				</ul>
				<ul id="nav-mobile" class="right hide-on-med-and-down">

					<% unless user_signed_in? %>
						<li><%= link_to_unless_current t('.create_account'), new_user_registration_path %></li>
						<li><%= link_to_unless_current t('.log_in'), new_user_session_path %></li>
					<% else %>
						<% if current_user.avatar?%>
							<li><%= link_to image_tag(current_user.avatar_url(:thumb).to_s, size: '38x38', id:'avatar_image'), "#", class: 'dropdown-trigger',id: 'nav_avatar', data:{target:'dropdown_nav'}%></li>
						<% else %>
							<li><%= link_to image_tag('no_avatar.png', size:'38x38', id:'no_avatar_image'), "#", class: 'dropdown-trigger',id: 'nav_avatar', data:{target:'dropdown_nav'} %></li>
						<% end %>

						<ul id='dropdown_nav' class='dropdown-content'>
							<li><%= link_to t('.my_page'),my_page_path(current_user)%></li>
							<li><%= link_to_unless_current t('.edit_profile'), edit_user_registration_path %></li>
							<li><%= link_to_unless_current t('.log_out'), destroy_user_session_path, method: :delete %></li>
						</ul>

					<% end %>

					<% if I18n.locale.to_s == "en" %>
						<li><%= link_to "EN", "#", class: 'dropdown-trigger', data:{target:'dropdown_lang'} %></li>
            <ul id='dropdown_lang' class='dropdown-content'>
            <li><%= link_to('JPN', :locale => 'ja')%></li>
						</ul>
					<% else %>
						<li><%= link_to "JPN", "#", class: 'dropdown-trigger', data:{target:'dropdown_lang'} %></li>
            <ul id='dropdown_lang' class='dropdown-content'>
            <li><%= link_to('EN', :locale => 'en')%></li>
						</ul>
					<% end %>

				</ul>
			</div>
		</nav>
	</header>

  <div class="notice card light-blue lighten-4 blue-text col s12 m6">
    <p><%= notice %></p>
  </div>
  <div class="alert card red accent-3 white-text col s12 m6">
    <p><%= alert %></p>
  </div>

  <%= yield %>

</body>

</html>
