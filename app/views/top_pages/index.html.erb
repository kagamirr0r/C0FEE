<div class="beans">
<h1>Latest Beans</h1>
	<% if @beans.present? %>
		<table>
			<thead>
				<tr>
					<th>Image</th>
					<th>Country</th>
					<th>Area</th>
					<th>Roast</th>
					<th>Sour</th>
					<th>Sweet</th>
					<th>Bitter</th>
					<th>Shop</th>
				</tr>
			</thead>

			<tbody>
				<% Array(@beans).each do |bean| %>
					<tr>
						<td id="bean_image_td">
						<% if bean.bean_image? %>
							<%=link_to image_tag(bean.bean_image.to_s, :id => 'bean_image'), bean_path(bean)%>
						<% else%>
							<%=link_to image_tag('C0FEE.png', :id => 'no_bean_image'), bean_path(bean)%>
						<% end %>
						</td>
						<td><%= bean.country %></td>
						<td><%= bean.area %></td>
						<td><%= bean.roast %></td>
						<td><%= bean.impression.i_sour%></td>
						<td><%= bean.impression.i_sweet%></td>
						<td><%= bean.impression.i_bitter%></td>
						<td><%= link_to bean.shop.name, shop_path(id: bean.shop.id) %></td>
						</tr>
				<% end %>
			</tbody>
		</table>
	 <%= link_to "more" ,beans_url%>
	<% end %>
</div>

<div class="recipes">
	<h1>Latest Recipes</h1>
	<% if @recipes.present? %>
		<table>
			<thead>
				<tr>
					<th>Image</th>
					<th>Bean</th>
					<th>Name</th>
					<th>Grind</th>
					<th>Extraction</th>
					<th>Sour</th>
					<th>Sweet</th>
					<th>Bitter</th>
					<th>Aroma</th>
					<th>Fullbody</th>
				</tr>
			</thead>

			<tbody>
				<% Array(@recipes).each do |recipe| %>
					<tr>
						<td id="recipe_image_td">
							<% if recipe.recipe_image? %>
								<%=link_to image_tag(recipe.recipe_image.to_s, :id => 'recipe_image'), recipe_path(recipe) %>
							<% else%>
								<%=link_to image_tag('C0FEE.png', :id => 'no_recipe_image'), recipe_path(recipe) %>
							<% end %>
						</td>
						<td><%= link_to recipe.bean.country, bean_path(id: recipe.bean.id) %></td>
						<td><%= recipe.name %></td>
						<td><%= recipe.grind %></td>
						<td><%= recipe.extraction %></td>
						<td><%= recipe.taste.t_sour%></td>
						<td><%= recipe.taste.t_sweet%></td>
						<td><%= recipe.taste.t_bitter%></td>
						<td><%= recipe.taste.t_aroma%></td>
						<td><%= recipe.taste.t_fullbody%></td>
							<% if current_user == recipe.bean.user %>
								<td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
								<td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
   <%= link_to "more" ,recipes_path%>
	<% end %>
</div>

<div class="shops">
<h1>Latest Shops</h1>
	<% if @shops.present? %>
		<table>
			<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th>Address</th>
					<th>Url</th>
				</tr>
			</thead>

			<tbody>
				<% Array(@shops).each do |shop| %>
					<tr>
						<td id="shop_image_td">
						<% if shop.shop_image? %>
							<%=link_to image_tag(shop.shop_image.to_s,:id => 'shop_image'),shop_path(id: shop.id)%>
						<% else%>
							<%=link_to image_tag('C0FEE.png', :id => 'no_shop_image'), shop_path(id: shop.id) %>
						<% end %>
						</td>
						<td><%= shop.name %></td>
						<td><%= shop.address %></td>
						<td><%= shop.url %></td>
						<td><%= link_to 'Edit', edit_shop_path(shop) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
  <%= link_to "more" ,shops_path%>
 <% end %>
</div>
