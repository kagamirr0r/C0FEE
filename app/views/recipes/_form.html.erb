<%= form_with(model: recipe, local: true) do |form| %>

		<div class="field">
			<%= form.label :image%>
			<%= form.file_field :r_image%>
		</div>

		<div class="field">
			<%= form.label :bean_id %>
			<%= bean.country %>
			<%= form.hidden_field :bean_id, value: bean.id %>
		</div>

		<div class="field">
			<%= form.label :name %>
			<%= form.text_field :name%>
		</div>

		<div class="field">
			<%= form.label :grind %>
			<%= form.select :grind, [["Coarse", "Coarse"],["Medium-Coarse", "Medium-Coarse"],
			["Medium", "Medium"],["Medium-Fine", "Medium-Fine"],["Fine", "Fine"]]%>
		</div>

		<div class="field">
			<%= form.label :amount %>
			<%= form.number_field :amount, value: 10%> <span>g</span>
		</div>

		<div class="field">
			<%= form.label :extraction %>
			<%= form.select :extraction, [["Paper-Filter", "paperfilter"],["Metal-Filter", "metalfilter"],
			["Flannel", "flannel"],["French-Press", "frenchpress"],["Espresso", "espresso"],
			["Aero-Press", "aeropress"],["Water-Drip","waterdrip"],["Cofee-Maker", "cofeemaker"]] %>
		</div>

		<div class="field">
			<%= form.label :temperature %> <span>(Â°C)</span>
			<%= form.number_field :temperature, value: 90, step: 5%>
		</div>

	<%= form.fields_for :taste do |t| %>

		<div class="field">
			<%= t.label :sour%>
			<%= t.number_field :t_sour,min: 1, max: 5 %>
		</div>

		<div class="field">
			<%= t.label :sweet %>
			<%= t.number_field :t_sweet,min: 1, max: 5%>
		</div>

		<div class="field">
			<%= t.label :bitter %>
			<%= t.number_field :t_bitter,min: 1, max: 5%>
		</div>

		<div class="field">
			<%= t.label :aroma %>
			<%= t.number_field :t_aroma,min: 1, max: 5 %>
		</div>

		<div class="field">
			<%= t.label :fullbody %>
			<%= t.number_field :t_fullbody,min: 1, max: 5 %>
		</div>

		<div class="field">
			<%= t.label :comment %>
			<%= t.text_area :t_comment %>
		</div>

	<% end %>

		<div class="actions">
			<%= form.submit %>
		</div>

<% end %>
