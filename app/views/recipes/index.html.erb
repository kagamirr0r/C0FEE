<div class="recipes">
	<div id="search_form"><%= render 'search_form'%></div>
		<div class="row">
			<div class="container">
				<%= render 'recipes/recipes', recipes: @recipes%>
			</div>
		</div>
	<%= paginate @recipes %>
	<div class="fixed-action-btn">
		<%= link_to beans_path,class: 'register_recipe',class: "btn-floating btn-large red waves-effect waves-light tooltipped",data:{position:"left", tooltip: t('.make_recipe')} do %>
			<%= content_tag :i, "add", class: "material-icons" %>
		<% end %>
	</div>
</div>
