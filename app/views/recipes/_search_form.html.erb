<%= form_with(scope: :search_recipe, url: recipes_path, method: :get, local: true) do |r|%>
	<div class="row">

		<div class="input-field col s12 l2 ">
			<i class="material-icons prefix">swap_vert</i>
			<%= r.select :hot_ice,Recipe.hot_ices.keys.map {|k| [I18n.t("enums.recipe.hot_ice.#{k}"),k]}, include_blank: true %>
			<%= r.label(:hot_ice,Recipe.human_attribute_name(:hot_ice))%>
		</div>

		<div class="input-field col s12 l2 ">
		<i class="material-icons prefix">local_drink</i>
			<%= r.select :extraction, Recipe.extractions.keys.map {|k| [I18n.t("enums.recipe.extraction.#{k}"),k]}, include_blank: true %>
			<%= r.label(:extraction,Recipe.human_attribute_name(:extraction))%>
		</div>

		<div class="input-field col s12 l1 ">
			<i class="material-icons prefix">change_history</i>
			<%= r.number_field :t_sour,min: 1, max: 5, class: "autocomplete" %>
			<%= r.label(:t_sour,Taste.human_attribute_name(:t_sour))%>
		</div>

		<div class="input-field col s12 l1 ">
			<i class="material-icons prefix">panorama_fish_eye</i>
			<%= r.number_field :t_sweet,min: 1, max: 5, class: "autocomplete"%>
			<%= r.label(:t_sweet,Taste.human_attribute_name(:t_sweet))%>
		</div>

		<div class="input-field col s12 l1 ">
			<i class="material-icons prefix">crop_square</i>
			<%= r.number_field :t_bitter,min: 1, max: 5, class: "autocomplete"%>
			<%= r.label(:t_bitter,Taste.human_attribute_name(:t_bitter))%>
		</div>

		<div class="input-field col s12 l1 ">
			<i class="material-icons prefix">filter_list</i>
			<%= r.number_field :t_aroma,min: 1, max: 5, class: "autocomplete" %>
			<%= r.label(:t_aroma,Taste.human_attribute_name(:t_aroma))%>
		</div>

		<div class="input-field col s12 l1 ">
			<i class="material-icons prefix">brightness_medium</i>
			<%= r.number_field :t_fullbody,min: 1, max: 5, class: "autocomplete" %>
			<%= r.label(:t_fullbody,Taste.human_attribute_name(:t_fullbody))%>
		</div>

  	<div class="actions col s1 l1">
			<%= r.submit t('.submit_search'),class:"btn waves-effect waves-light white"%>
		</div>

		<% if @recipe_search_params.present? %>
			<div class="actions col s1 l1">
				<%= link_to t('.back'), recipes_path, class:"btn waves-effect waves-light"%>
			</div>
		<% end %>

	</div>
<% end %>
