<% recipe_liked_counts(recipe) %>
	<% if current_user.like_recipe?(recipe) %>
		<%= button_to recipe_like_path(id: recipe.id),method: :delete,remote: true,class: "waves-effect waves-light btn-small" do%>
			<%= t('.cancel_like_recipe') %>
			<%= content_tag :i, "favorite", class: "material-icons right" %>
			<%= @count_recipe_likes %>
		<% end %>
	<% else %>
		<%= button_to recipe_likes_path(id: recipe.id),remote: true,class: "waves-effect waves-light btn-small red accent-3" do%>
			<%= t('.like_recipe') %>
			<%= content_tag :i, "favorite_border", class: "material-icons red accent-3 right" %>
			<%= @count_recipe_likes %>
	<% end %>
<% end%>
