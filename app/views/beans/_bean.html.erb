<% if bean.present? %>
		<table>
			<thead>
				<tr>
					<th>Image</th>
					<th>Country</th>
					<th>Area</th>
					<th>Variety</th>
					<th>Farm</th>
					<th>Process</th>
					<th>Roast</th>
					<th>Sour</th>
					<th>Sweet</th>
					<th>Bitter</th>
					<th>Shop</th>
					<th>Price</th>
					<th>Comment</th>
					<% Array(bean).each do |bean| %>
						<% unless current_user == bean.user %>
							<th>User</th>
						<% end %>
					<% end%>
					<th>Like</th>
				</tr>
			</thead>

			<tbody>
					<% Array(bean).each do |bean| %>
					<tr>
						<td id="bean_image_td">
							<% if bean.bean_image? %>
								<%= image_tag bean.bean_image.to_s, :id => 'bean_image' %>
							<% else%>
								<%= image_tag 'C0FEE.png', :id => 'no_bean_image' %>
							<% end %>
						</td>
						<td><%= bean.country %></td>
						<td><%= bean.area %></td>
						<td><%= bean.variety %></td>
						<td><%= bean.farm %></td>
						<td><%= bean.process %></td>
						<td><%= bean.roast %></td>
						<td><%= bean.impression.i_sour%></td>
						<td><%= bean.impression.i_sweet%></td>
						<td><%= bean.impression.i_bitter%></td>
						<td><%= link_to bean.shop.name, shop_path(id: bean.shop.id) %></td>
						<td><%= bean.price %>$/100g</td>
						<td><%= bean.impression.i_comment%></td>
						<% unless current_user == bean.user %>
							<td><%= link_to bean.user.username, user_path(id: bean.user.id)%></td>
						<% end %>
						<td><%= @count_bean_likes %></td>
						</tr>
				</tbody>
			</table>
		<span><%= link_to "Create Recipe", new_recipe_path(id: bean.id)%></span>
		<span><%= render 'bean_likes/like_bean_button', bean: bean unless current_user == bean.user%></span>
		<% if bean.user == current_user %>
			<span><%= link_to 'Edit', edit_bean_path(bean) %></span>
			<span><%= link_to 'Destroy', bean, method: :delete, data: { confirm: 'Are you sure?' } %></span>
		<% end %>
	<% end %>
<% end %>
