<% bean_liked_counts(bean) %>
	<% if current_user.liked_bean?(bean) %>
		<%= button_to bean_like_path(id: bean.id),method: :delete,remote: true,class: "waves-effect waves-light btn-small" do%>
			<%= t('.cancel_like_bean') %>
			<%= content_tag :i, "favorite", class: "material-icons right" %>
			<%= @count_bean_likes %>
		<% end %>
	<% else %>
		<%= button_to bean_likes_path(id: bean.id),remote: true,class: "waves-effect waves-light btn-small red accent-3" do%>
			<%= t('.like_bean')%>
			<%= content_tag :i, "favorite_border", class: "material-icons red accent-3 right" %>
			<%= @count_bean_likes %>
	<% end %>
<% end%>
