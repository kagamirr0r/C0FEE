<% bean_liked_counts(bean) %>
	<% if current_user.liked_bean?(bean) %>
		<%= link_to bean_like_path(id: bean.id),method: :delete,remote: true,class: "red-text" do%>
			<%#= t('.cancel_like_bean') %>
			<%= content_tag :i, "favorite", class: "small material-icons" %>
			<%= @count_bean_likes %>
		<% end %>
	<% else %>
		<%= link_to bean_likes_path(id: bean.id),method: :post,remote: true,class: "red-text" do%>
			<%#= t('.like_bean')%>
			<%= content_tag :i, "favorite_border", class: "small material-icons" %>
			<%= @count_bean_likes %>
	<% end %>
<% end%>
