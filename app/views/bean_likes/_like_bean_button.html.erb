<% bean_liked_counts(bean) %>
	<% if current_user.liked_bean?(bean) %>
		<%= form_for(current_user.bean_likes.find_by(bean_id: bean.id), html: { method: :delete }) do |f|  %>
			<%= hidden_field_tag :bean_id, bean.id%>
			<%= button_tag class: "waves-effect waves-light btn-small" do %><%= content_tag :i, "favorite", class: "material-icons right" %>Liked  <%= @count_bean_likes%><% end %>
		<% end %>
	<% else %>
		<%= form_for(current_user.bean_likes.build) do |f| %>
			<%= hidden_field_tag :bean_id, bean.id%>
			<%= button_tag class: "waves-effect waves-light btn-small red accent-3" do %><%= content_tag :i, "favorite_border", class: "material-icons red accent-3 right" %>Like!  <%= @count_bean_likes%><% end %>
		<% end %>
	<% end%>
